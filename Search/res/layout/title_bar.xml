<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/title_bar" 
    android:background="#fff8f8f8" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false" 
  	xmlns:android="http://schemas.android.com/apk/res/android">
  	<RelativeLayout 
    android:background="#fff8f8f8" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:padding="3dp">
    <LinearLayout 
        android:gravity="center_vertical" 
        android:id="@+id/url_btn_frame" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:focusable="false"
        android:layout_marginRight="2.0dip" 
        android:layout_alignParentRight="true" 
        android:layout_centerVertical="true">

        <TextView 
            android:textSize="12.0dip" 
            android:textColor="@color/color_url_input_openpage_count_text_selector" 
            android:gravity="center" 
            android:id="@+id/url_open_page" 
            android:background="@drawable/selector_img_open_page" 
            android:layout_width="40.0dip" 
            android:layout_height="40.0dip" 
            android:layout_marginRight="2.0dip" 
            android:text="0" />
       
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/url_input_window_text_layout" 
        android:background="@drawable/url_bg_address" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="40.0dip" 
        android:clickable="true" 
        android:focusable="false"
        android:layout_width="fill_parent" 
        android:layout_height="36.0dip" 
        android:layout_marginLeft="10.0dip" 
        android:layout_marginRight="6.0dip" 
        android:layout_toLeftOf="@+id/url_btn_frame" 
        android:layout_centerVertical="true">
        <EditText 
            android:textSize="16.0dip" 
            android:textColor="#ff212121" 
            android:textColorHint="#ff9e9e9e" 
            android:gravity="center_vertical" 
            android:id="@+id/search" 
            android:background="@null" 
            android:clickable="true" 
            android:focusable="false"
             android:focusableInTouchMode="false" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:hint="请输入地址" 
            android:maxLines="1" 
            android:layout_centerVertical="true" 
            android:inputType="textAutoComplete|textUri" 
            android:imeOptions="actionGo" />
        <View 
            android:id="@+id/url_window_https" 
            android:background="@drawable/icon_https" 
            android:visibility="gone" 
            android:layout_width="16.0dip" 
            android:layout_height="16.0dip" 
            android:layout_marginRight="6.0dip" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0dip" 
            android:textColor="#ff212121" 
            android:ellipsize="end" 
            android:gravity="center_vertical" 
            android:id="@+id/url_window_text" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:singleLine="true" 
            android:layout_toRightOf="@+id/url_window_https" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
         android:id="@+id/url_img_refresh" 
         android:background="@drawable/url_img_refresh" 
         android:layout_width="40.0dip" 
         android:layout_height="40.0dip" 
         android:layout_alignRight="@id/url_input_window_text_layout" 
         android:layout_centerVertical="true" />
    </RelativeLayout>
    <View 
		       android:id="@+id/bottom_line" 
		       android:background="#ffbdbdbd" 
		       android:layout_width="fill_parent" 
		       android:layout_height="0.5dip"  
		       android:layout_alignParentBottom="true"/>
  
</RelativeLayout>