<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@+id/url_input_titlebar" 
    android:background="#fff8f8f8" 
    android:layout_width="fill_parent" 
    android:layout_height="@dimen/webview_titlebar_height"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:gravity="center_vertical" 
        android:id="@+id/url_btn_frame" 
        android:layout_width="wrap_content" 
        android:layout_height="fill_parent" 
        android:layout_marginRight="2.0dip" 
        android:layout_alignParentRight="true" 
        android:layout_centerVertical="true">
        <View 
            android:id="@+id/url_go_btn" 
            android:background="@drawable/selector_url_img_search_go" 
            android:layout_width="40.0dip" 
            android:layout_height="40.0dip" 
            android:layout_marginRight="2.0dip"  />
        <TextView 
            android:textSize="12.0dip" 
            android:textColor="@color/color_url_input_openpage_count_text_selector" 
            android:gravity="center" 
            android:id="@+id/url_openmulti_btn" 
            android:background="@drawable/selector_img_open_page" 
            android:layout_width="40.0dip" 
            android:layout_height="40.0dip" 
            android:layout_marginRight="2.0dip" 
            android:text="6" 
            android:visibility="gone"/>
        <LinearLayout 
            android:gravity="center_vertical" 
            android:orientation="horizontal" 
            android:id="@+id/url_keywordsearch_btn" 
            android:paddingLeft="1.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent"
             android:visibility="gone">
            <View 
                android:background="#ffe0e0e0" 
                android:layout_width="1.0dip" 
                android:layout_height="18.0dip" />
            <View 
                android:background="@drawable/selector_url_img_search" 
                android:duplicateParentState="true" 
                android:layout_width="40.0dip" 
                android:layout_height="40.0dip" 
                android:layout_marginLeft="3.0dip"  />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/url_input_window_text_layout" 
        android:background="@drawable/url_bg_address" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="40.0dip" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="36.0dip" 
        android:layout_marginLeft="10.0dip" 
        android:layout_marginRight="6.0dip" 
        android:layout_toLeftOf="@+id/url_btn_frame" 
        android:layout_centerVertical="true">
        <EditText 
            android:textSize="16.0dip" 
            android:textColor="#ff212121" 
            android:textColorHint="#ff9e9e9e" 
            android:gravity="center_vertical" 
            android:id="@+id/url_input_window_text" 
            android:background="@null" 
            android:clickable="true" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:hint="请输入地址" 
            android:text="https://"
            android:maxLines="1" 
            android:layout_centerVertical="true" 
            android:inputType="textAutoComplete|textUri" 
            android:imeOptions="actionGo" />
        <View 
            android:id="@+id/url_window_https" 
            android:background="@drawable/icon_https" 
            android:visibility="gone" 
            android:layout_width="16.0dip" 
            android:layout_height="16.0dip" 
            android:layout_marginRight="6.0dip" 
            android:layout_centerVertical="true" />
        <TextView 
            android:textSize="16.0dip" 
            android:textColor="#ff212121" 
            android:ellipsize="end" 
            android:gravity="center_vertical" 
            android:id="@+id/url_window_text" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:singleLine="true" 
            android:layout_toRightOf="@+id/url_window_https" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
         android:id="@+id/url_input_window_delete_button" 
         android:background="@drawable/selector_url_img_cancel" 
         android:layout_width="40.0dip" 
         android:layout_height="40.0dip" 
         android:layout_alignRight="@id/url_input_window_text_layout" 
         android:layout_centerVertical="true" />
   <View 
       android:id="@+id/bottom_line" 
       android:background="#ffbdbdbd" 
       android:layout_width="fill_parent" 
       android:layout_height="0.5dip" 
       android:layout_alignParentBottom="true" />
</RelativeLayout>
