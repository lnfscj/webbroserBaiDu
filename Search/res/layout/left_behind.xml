<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:padding="20dp"
		android:background="@drawable/bg_titlebar_base">

		<TextView 
		    android:id="@+id/login"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:text="您需要先登录"
	
		    android:drawableLeft="@drawable/left_profile_null"
		    android:layout_alignParentLeft="true"
		    android:textColor="@color/white"/>
	
		<ImageView 
		    android:id="@+id/alarm"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/left_profile_alarm"
		    android:layout_toLeftOf="@+id/close"/>
		<ImageView 
		    android:id="@+id/close"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/lefit_profile_close"
		    android:layout_alignParentRight="true"/>
        
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		<TextView 
		    android:id="@+id/use_me"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:padding="20dp"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:text="订阅"
		    android:textSize="12sp"
		    android:gravity="center_horizontal"
		    android:drawableTop="@drawable/left_icon_user_me"/>

	
		<TextView 
		    android:id="@+id/user_mail"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:padding="20dp"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:gravity="center_horizontal"
		    android:text="电子邮件"
		    android:textSize="12sp"
		    android:drawableTop="@drawable/left_icon_user_mail"/>
		<TextView 
		    android:id="@+id/user_message"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:gravity="center_horizontal"
		    android:text="个人信息"
		    android:textSize="12sp"
		    android:padding="20dp"
		    
		    android:drawableTop="@drawable/left_icon_user_message"/>
		<RelativeLayout 
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:layout_weight="1">
		<TextView 
		    android:id="@+id/user_talktalk"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="20dp"	
		    android:gravity="center_horizontal"
		    android:text="消息"
		    android:textSize="12sp"
		    android:drawableTop="@drawable/left_icon_user_talktalk"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/left_ico_new"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"/>
		    "
		 </RelativeLayout>   
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		<TextView 
		    android:id="@+id/user_cafe"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:padding="20dp"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:text="咖啡"
		    android:textSize="12sp"
		    android:gravity="center_horizontal"
		    android:drawableTop="@drawable/left_icon_user_cafe"/>
	
		<TextView 
		    android:id="@+id/user_blog"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:padding="20dp"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:gravity="center_horizontal"
		    android:text="博客"
		    android:textSize="12sp"
		    android:drawableTop="@drawable/left_icon_user_blog"/>
		<TextView 
		    android:id="@+id/user_bookmark"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_margin="0.5dp"
		    android:text="书签"
		    android:background="@color/white"
		    android:gravity="center_horizontal"
		    android:padding="20dp"
		    android:textSize="12sp"
		    android:drawableTop="@drawable/left_icon_user_bookmark"/>
	
		<TextView 
		    android:id="@+id/user_setting"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_margin="0.5dp"
		    android:background="@color/white"
		    android:layout_weight="1"
		    android:padding="20dp"	
		    android:gravity="center_horizontal"
		    android:text="设置"
		    android:textSize="12sp"
		    android:drawableTop="@drawable/left_icon_user_setting"/>

		</LinearLayout>
        
    </LinearLayout>

	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:orientation="vertical"
		    android:background="@drawable/corner_bg">
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		<TextView 
		    android:id="@+id/pay_start"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:layout_alignParentLeft="true"
		    android:textColor="@color/white"
		    android:text="Pay for it"/>
		<TextView 
		    android:id="@+id/pay_end"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:layout_alignParentRight="true"
		    android:textColor="@color/white"
		    android:text="开始"
		    android:drawableRight="@drawable/left_arrow01"/>
		    
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="0.5dp"
		    android:background="@color/white"
		    android:padding="10dp"/>
		<TextView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:text="便利安全的支付方式"
		    android:textColor="@color/white"/>
		    
	</LinearLayout>
        

    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white">
		<TextView 
		    android:id="@+id/service_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:text="方股价的服务"
		    android:layout_alignParentLeft="true"/>
		<TextView 
		    android:id="@+id/service_settings"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:text="设定"
		    android:drawableLeft="@drawable/left_icon_service_setting"
		    android:layout_toRightOf="@+id/service_title"/>
		<TextView 
		    android:id="@+id/service_more"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="10dp"
		    android:text="全体拍忌"
		    android:layout_alignParentRight="true"/>
        
    </RelativeLayout>
   <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_margin="1dp">
		<LinearLayout 
		    android:id="@+id/list_left"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:paddingBottom="10dp"
		    android:background="@color/white"/>

		<LinearLayout 
		    android:id="@+id/list_right"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:paddingBottom="10dp"
		    android:background="@color/white"/>

        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_margin="1dp">
        <TextView 
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登录"
            android:textSize="12sp"
            android:drawableTop="@drawable/left_icon_login"
            android:layout_margin="0.5dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@color/white"/>
        <TextView 
            android:id="@+id/btn_pc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电脑版"
            android:textSize="12sp"
            android:drawableTop="@drawable/left_icon_pc"
            android:layout_margin="0.5dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@color/white"/>
        <TextView 
            android:id="@+id/btn_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="网址搜索"
            android:textSize="12sp"
            android:drawableTop="@drawable/left_icon_url"
            android:layout_margin="0.5dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@color/white"/>
        <TextView 
            android:id="@+id/btn_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加"
            android:textSize="12sp"
            android:drawableTop="@drawable/left_icon_open"
            android:layout_margin="0.5dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:background="@color/white"/>
    </LinearLayout>
  
    

</LinearLayout>
</ScrollView>